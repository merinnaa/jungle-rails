<div class="card">
  <div class="card-header">
    <h1>Admin &raquo; All Categories</h1>
  </div>
  <div class="card-body">
    <% if @categories.any? %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No categories found.</p>
    <% end %>

    <%= link_to "New Category", new_admin_category_path, class: "btn btn-primary" %>
  </div>
</div>